<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/view8" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
    />
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/contactImg"
            android:layout_width="75dp"
            android:layout_height="76dp"
            android:src="@drawable/profile"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            tools:src="@drawable/suyash" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@id/view8" app:layout_constraintStart_toStartOf="@id/view8"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@id/view8" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toStartOf="@+id/contactName"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>

    <TextView
            android:id="@+id/contactName"
            android:layout_width="0dp"
            android:clickable="true"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/contactImg"
            tools:text="Suyash DVM"
            android:maxLines="1"
            android:textSize="18sp" android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/view8"
            app:layout_constraintBottom_toBottomOf="@id/view8" android:textAllCaps="false"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="26dp" android:layout_marginBottom="26dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/check"
            android:layout_marginRight="8dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/check"
            android:visibility="invisible"
            android:layout_marginEnd="24dp"
            android:background="#0000ffff"
            android:layout_marginRight="24dp" app:layout_constraintEnd_toEndOf="@id/view8"
            app:layout_constraintTop_toTopOf="@id/view8" android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="@id/view8"
            tools:srcCompat="@android:color/holo_green_dark" android:src="#E8CBC0"/>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activities.NewPersonalChatActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editTextNewNumber"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="100dp"
            android:layout_marginStart="100dp" android:layout_marginTop="156dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Start New Chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonNewPersonalChat" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="100dp" android:layout_marginStart="100dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextNewNumber" android:layout_marginTop="28dp"/>
    <TextView
            android:text="EnterMobileNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="100dp"
            android:layout_marginStart="100dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextNewNumber"/>
    <TextView
            android:text="+91"
            android:textSize="18sp"
            android:gravity="center"
            android:textAlignment="gravity"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:id="@+id/textView5" app:layout_constraintEnd_toStartOf="@+id/editTextNewNumber"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
</android.support.constraint.ConstraintLayout>